Find Factorial of any number 
c++ recursion 
#include <bits/stdc++.h>
using namespace std;
int fact(int n){
    if(n==0 || n==1)
        return 1;    // time comp O(2^n)

    return n*fact(n-1);
}
int main() {
    int n;
    cin>>n;
    cout<<fact(n);
}
c++ for loop

#include <bits/stdc++.h>
using namespace std;
int fact(int n){
    int ans=1;
    for(int i=n;i>=1;i--){
        ans*=i;
    }
    return ans;
}
int main() {
    int n;
    cin>>n;
    cout<<fact(n);
}

Java
import java.util.*;
public class Main {
    public static void main(String args[]) {
        int n,ans=1;
        Scanner sc=new Scanner(System.in);
         n=sc.nextInt();
        for(int i=n;i>=1;i--){
            ans*=i;
        }
        System.out.println(ans);
    }
}
